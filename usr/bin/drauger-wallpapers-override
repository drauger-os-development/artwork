if [ "$UID" == "0" ]; then
	builtin echo "You must be root to run this script."
	exit
fi
if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	builtin echo -e "drauger-wallpaper, Version $(dpkg -l drauger-wallpaper | grep '^ii' | awk '{print $3}')\n\nThis script provides a simple way for users to reset symlinks used to show the Drauger OS default wallpaper, if it gets overridden.\n\n-h, --help\t\tShow this help dialog and exit"
	exit
fi
release=$(lsb_release -rs 2>/dev/null)
settings=$(</etc/drauger-wallpapers/${release}.conf)
settings=${settings//=/ }
default_wall=$(builtin echo "$settings" | grep "default_wallpaper" | awk '{print $2}')
change_wall=$(builtin echo "$settings" | grep "change_wallpaper" | awk '{print $2}')
source_path=$(builtin echo "$settings" | grep "source_path" | awk '{print $2}')
dest_path=$(builtin echo "$settings" | grep "dest_path" | awk '{print $2}')
mv -v  "$dest_path/$change_wall" "$dest_path/$change_wall.bak"
ln -sv "$dest_path/$change_wall" "$source_path/$default_wall"
